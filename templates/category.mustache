{{!
    @template qbank_purgecategory/category

    This template renders the list item for each category.

    Example context (json):
    {
        "categoryid": "1",
        "contextid": "2",
        "categoryname": "Default for Miscellaneous",
        "questioncount": "1",
        "categorydesc": "The default category for questions shared in context Miscellaneous",
        "actionlink": {
            "disabled": false,
            "url": "#",
            "id": "test-id",
            "classes": "",
            "attributes": [],
            "icon": {
                "pix": {
                    "key": 'purge',
                    "component": "qbank_purgecategory",
                    "title": 'Purge this category'
                }
            },
            "text": "Purge"
        },
        "haschildren": false,
        "children": []
    }
}}
<b>{{categoryname}}</b> ({{questioncount}})
{{#actionlink}}
    {{> core/action_link }}
{{/actionlink}}
{{#categorydesc}}
    <div>
        {{{categorydesc}}}
    </div>
{{/categorydesc}}
{{#haschildren}}
    <ul>
        {{#children}}
            <li>
                {{> qbank_purgecategory/category }}
            </li>
        {{/children}}
    </ul>
{{/haschildren}}
